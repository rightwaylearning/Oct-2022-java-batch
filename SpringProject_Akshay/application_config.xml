<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  

<bean id = "Employee1" class = "com.application.Employee">
	
	<property name="name" value = "Ravindra Shimpi"></property>
	<property name="designation" value = "General Manager"></property>
	<property name="age" value = "25"></property>
	<property name="Address" ref="Adr"></property>
      
  </bean>
  
  <bean id = "Adr" class = "com.application.Address">
  
  <property name="addressLine1" value = "Konark Nagar"></property>
  <property name="addressLine2" value = "Nashik"></property>
  
  </bean>
  
</beans>