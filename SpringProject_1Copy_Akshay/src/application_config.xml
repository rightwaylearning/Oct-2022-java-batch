<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 
               
	<bean id="emp1" class="com.akshaytejale.Employee">

		<constructor-arg name="ID" value="01" index="0"></constructor-arg>
		<constructor-arg name="name" value="Akshay Vilas Tejale" index="1"></constructor-arg>
		<constructor-arg name="designation" value="General Managere" index="2"></constructor-arg>
		<constructor-arg name="age" value="28" index="3"></constructor-arg>
		<constructor-arg name="gender" value="Male" index="4"></constructor-arg>

	</bean>


</beans>